generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Product Product[]
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique // Clerk user ID
  name      String?
  email     String   @unique
  image     String?
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products  Product[]
  orders    Order[]  @relation("UserOrders") // links orders via clerkId
}

model Order {
  id            String      @id @default(uuid())
  totalPrice    Float
  phone         String
  streetAddress String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  clerkId       String      // Clerk ID from authentication
  User          User        @relation("UserOrders", fields: [clerkId], references: [clerkId], onDelete: Cascade, onUpdate: Cascade)
  
  OrderItem     OrderItem[]

  @@index([clerkId])
}



model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int     @default(1)
  productId String
  orderId   String
  Product   Product @relation(fields: [productId], references: [id])
  Order     Order   @relation(fields: [orderId], references: [id])

  @@unique([productId, orderId])
}

model Product {
  id             String      @id @default(uuid())
  name_ar        String
  name_en        String
  description_ar String
  description_en String
  image          String
  basePrice      Float
  createdAt      DateTime    @default(now())
  updatedAt      DateTime?
  categoryId     Int
  userId         String
  User           User       @relation(fields: [userId], references: [id])
  Category       Category   @relation(fields: [categoryId], references: [id])
  OrderItem      OrderItem[]
}

enum UserRole {
  USER
  ADMIN
}
